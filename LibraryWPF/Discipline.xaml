<Page x:Class="LibraryWPF.Discipline"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Discipline">

    <Grid>
        <ComboBox x:Name="studcombo" HorizontalAlignment="Center" Margin="0,0,200,100"  VerticalAlignment="Center" Width="132" Height="23"/>
        <TextBox x:Name="disciplinetxt" HorizontalAlignment="Center" Margin="0,0,-200,100" Height="23"  TextWrapping="Wrap" VerticalAlignment="Center" Width="50"/>
        <TextBlock HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,200,200" TextWrapping="Wrap" Text="Name" VerticalAlignment="Center" Width="120" FontSize="18"/>
        <TextBlock HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,-200,200" TextWrapping="Wrap" Text="Deduction" VerticalAlignment="Center" Width="120" FontSize="18"/>
        <Button x:Name="discsubmit" IsDefault="True" Content="Submit" HorizontalAlignment="Center" Margin="0,0,0,-100" VerticalAlignment="Center" Width="75" Click="discsubmit_Click"/>
        <TextBlock x:Name="status" HorizontalAlignment="Left" Margin="332,402,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="131"/>

    </Grid>
</Page>
